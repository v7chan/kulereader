extends layout

block content
  div(class='jumbotron')
    h2 Participants
    table.table
      td Name
      td Email
      td Avg books
      td Familiarity
      td English native?
      for user in users
        tr
        td= user.full_name
        td= user.email
        td= user.avg_books
        td= user.familiarity
        td= user.english == 1 ? "Yes" : "No"

    h2 Answers from participants
    table.table
      td Participant
      td Email
      td Answer 1
      td Answer 2
      td Answer 3
      td Answer 4
      td Answer 5
      td Answer 6
      td Answer 7
      td Answer 8
      td Answer 9
      td Answer 10
      td Answer 11
      td Time Taken (min)
      for answer in answers 
        tr
        td= answer.user.full_name
        td= answer.user.email
        td= answer.answer1
        td= answer.answer2
        td= answer.answer3
        td= answer.answer4
        td= answer.answer5
        td= answer.answer6
        td= answer.answer7
        td= answer.answer8
        td= answer.answer9
        td= answer.answer10
        td= answer.answer11
        td= answer.time_taken
        